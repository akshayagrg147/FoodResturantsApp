<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <!--image view for displaying course image-->
        <ImageView
            android:id="@+id/idImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/sample_image_category" />

        <!--text view for displaying course name-->
        <TextView
            android:id="@+id/idTVCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"


            android:layout_toRightOf="@id/idImageView"
            android:text="DSA Self Paced Course"

            android:textSize="18sp"
            android:textStyle="bold" />


        <!--button for dismissing our dialog-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/idBtnProceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/idImageView"
            android:background="@drawable/rounded_corner_save_button"
            android:layout_margin="10dp"
            android:text="Proceed to CheckOut"
            android:textAllCaps="false" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
